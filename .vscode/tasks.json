{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "ceedling release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "ceedling clean",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run App",
            "type": "shell",
            "command": "build/artifacts/release/Cbject.out",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Clean, Build, Test",
            "type": "shell",
            "command": "ceedling clobber release test:all",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run All Tests",
            "type": "shell",
            "command": "ceedling test:all",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run All Tests with Coverage",
            "type": "shell",
            "command": "ceedling gcov:all utils:gcov",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Generate Doc",
            "type": "shell",
            "command": "rm -rf media; asciidoctor -r asciidoctor-diagram -o index.html index.adoc",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "./doc"
            }
        }
    ]
}