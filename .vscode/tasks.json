{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "ceedling release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "ceedling clean",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run App",
            "type": "shell",
            "command": "build/artifacts/release/Cbject.out",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Clean, Build, Test",
            "type": "shell",
            "command": "ceedling clobber release test:all",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run All Tests",
            "type": "shell",
            "command": "ceedling test:all",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run All Tests with Coverage",
            "type": "shell",
            "command": "ceedling gcov:all utils:gcov",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Generate Docs",
            "type": "shell",
            "command": "asciidoctor-pdf -r asciidoctor-diagram -o ./build/artifacts/doc/Cbject.pdf ./doc/Cbject.adoc; asciidoctor -r asciidoctor-diagram -o ./build/artifacts/doc/Cbject.html ./doc/Cbject.adoc",
            "group": "build",
            "problemMatcher": []
        }
    ]
}